
@{
    ViewBag.Title = "InitUpload";
}

<h2>InitUpload</h2>

<div id="uploader">
    <div>
        <div class="demo-section k-content">
            <input name="files" id="files" type="file" />
        </div>
        <div class="row">
            <div class="col-sm-12">
                <a href="/Ricette/Process" id="btnProcess" class="k-button k-primary">Processa</a>
            </div>
        </div>
    </div>

    <script>
                $(document).ready(function() {
                    $("#files").kendoUpload({
                        async: {
                            saveUrl: "Save",
                            removeUrl: "remove",
                            autoUpload: true,
                            success: function (e) {
                                alert("Ricette caricate con successo");
                            },
                            error: function (e) {
                                alert("Errori durante l'operazione");
                            }
                        }
                    });
                });
    </script>
</div>

